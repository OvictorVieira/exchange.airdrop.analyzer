{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Exchange Airdrop Analyzer",
  "version": "0.1.0",
  "identifier": "com.airdropanalyzer.exchange",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://127.0.0.1:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Exchange Airdrop Analyzer",
        "width": 1280,
        "height": 860,
        "dragDropEnabled": false,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
